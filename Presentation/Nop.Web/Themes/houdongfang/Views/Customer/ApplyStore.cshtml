@model CustomerApplyStoreModel
@using Nop.Web.Models.Customer;
@using Nop.Core;
@{
    Layout = "~/Themes/houdongfang/Views/Shared/_ColumnsTwo.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.Account").Text);
}
@section left
{
    @Html.Partial("MyAccountNavigation", Model.NavigationModel, new ViewDataDictionary())
}
<div class="profile_slidebar_right">
    <div class="profile_slidebar_right2">
        @if (Model.ApplyStoreState == CustomerApplyStoreEnum.NotApply)
        {
            using (Html.BeginRouteForm("CustomerApplyStore", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="checkout_title">
                    申请开店
                    <label />
                </div>
                <div class="message-error">
                    @Html.ValidationSummary(true)
                </div>
                <div class="form-fields">
                    <div class="profile_cmb1">
                        @Html.LabelFor(model => model.FirstName, new { @class = "profile_cmb1_left" }, ":")
                        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
                        <div class="profile_cmb1_right">
                            @Html.RequiredHint()
                            @Html.ValidationMessageFor(model => model.FirstName)
                        </div>
                    </div>
                    <div class="profile_cmb1">
                        @Html.LabelFor(model => model.LastName, new { @class = "profile_cmb1_left" }, ":")
                        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
                        <div class="profile_cmb1_right">
                            @Html.RequiredHint()
                            @Html.ValidationMessageFor(model => model.LastName)
                        </div>
                    </div>
                    <div class="profile_cmb1">
                        @Html.LabelFor(model => model.Phone, new { @class = "profile_cmb1_left" }, ":")
                        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                        <div class="profile_cmb1_right">
                            @Html.RequiredHint()
                            @Html.ValidationMessageFor(model => model.Phone)
                        </div>
                    </div>
                    <div class="profile_cmb1">
                        @Html.LabelFor(model => model.IdCardNo, new { @class = "profile_cmb1_left" }, ":")
                        @Html.TextBoxFor(model => model.IdCardNo, new { @class = "form-control" })
                        <div class="profile_cmb1_right">
                            @Html.RequiredHint()
                            @Html.ValidationMessageFor(model => model.IdCardNo)
                        </div>
                    </div>
                    <div class="profile_cmb1">
                        @Html.LabelFor(model => model.CollegeName, new { @class = "profile_cmb1_left" }, ":")
                        @Html.TextBoxFor(model => model.CollegeName, new { @class = "form-control" })
                        <div class="profile_cmb1_right">
                            @Html.RequiredHint()
                            @Html.ValidationMessageFor(model => model.CollegeName)
                        </div>
                    </div>
                    <div class="profile_cmb1">
                        @Html.LabelFor(model => model.StudentId, new { @class = "profile_cmb1_left" }, ":")
                        @Html.TextBoxFor(model => model.StudentId, new { @class = "form-control" })
                        <div class="profile_cmb1_right">
                            @Html.RequiredHint()
                            @Html.ValidationMessageFor(model => model.StudentId)
                        </div>
                    </div>
                    <div class="profile_cmb1">
                        @Html.LabelFor(model => model.DocumentCopyUrl, new { @class = "profile_cmb1_left" }, ":")
                        <input type="text" class="input" id="pic_path" onclick="$('#uploadedFile').trigger('click')" readonly>
                        <input type="file" name="uploadedFile" id="uploadedFile" style="visibility:hidden;" onchange="document.getElementById('pic_path').value=this.value">
                        <div class="profile_cmb1_right">
                            @Html.RequiredHint()
                            @Html.ValidationMessageFor(model => model.StudentId)
                        </div>
                    </div>
                    @if (!String.IsNullOrEmpty(Model.DocumentCopyUrl))
                    {
                        <div class="profile_cmb1">
                            <img src="@(Model.DocumentCopyUrl)" alt="DocumentCopy" />
                        </div>
                    }
                </div>
                <div class="profile_cmb2">
                    <input type="submit" value="提交申请" name="save-info-button" class="profile_cmb1_sub1" />
                </div>
            }
        }
        else if (Model.ApplyStoreState == CustomerApplyStoreEnum.Applied)
        {
            <p>申请已提交，请耐心等待审核</p>
        }
        else
        {
            <p>无法重复提交申请</p>
        }
    </div>
</div>
